{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    },
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "."
      ],
      "cwd": "."
    },
    "container-use": {
      "command": "container-use",
      "args": ["stdio"]
    },
    "github": {
      "command": "docker",
      "args": ["run", "-i", "--rm", "--env-file", ".env", "ghcr.io/github/github-mcp-server"]
    }
  }
}
