# テスト環境用の環境変数設定

# ===== 基本設定 =====
NODE_ENV=test
TZ=Asia/Tokyo

# ===== データベース設定 =====
# テスト用のSQLiteデータベース（インメモリ）
DATABASE_URL="file:./test.db"

# ===== Next.js設定 =====
# テスト用のベースURL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===== テスト制御 =====
# テストで使用するダミー値
NEXT_PUBLIC_TEST_MODE=true

# ===== デバッグ設定 =====
# テストでのログレベル制御
LOG_LEVEL=error
DEBUG_MODE=false

# ===== その他のテスト専用設定 =====
# APIタイムアウト（テストでは短く設定）
API_TIMEOUT=5000

# Jestの並列実行設定
FORCE_COLOR=true