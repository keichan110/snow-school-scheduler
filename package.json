{
  "name": "snow-school-scheduler",
  "version": "0.1.0",
  "description": "スキー・スノーボードスクール シフト管理システム",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:coverage:open": "npm run test:coverage && open coverage/html/index.html",
    "test:coverage:summary": "jest --coverage --watchAll=false --verbose=false --silent",
    "test:ci": "jest --coverage --watchAll=false --passWithNoTests --silent --maxWorkers=2",
    "test:debug": "jest --detectOpenHandles --verbose --runInBand",
    "test:unit": "jest --testPathPattern=__tests__ --passWithNoTests",
    "test:integration": "jest --testPathPattern=integration --runInBand --passWithNoTests",
    "test:e2e": "jest --testPathPattern=e2e --runInBand --passWithNoTests",
    "test:related": "jest --onlyChanged --passWithNoTests",
    "test:updateSnapshot": "jest --updateSnapshot --passWithNoTests",
    "test:performance": "jest --testPathPattern=performance --runInBand --passWithNoTests",
    "test:validate": "npm run typecheck && npm run lint && npm test",
    "test:coverage:ci": "jest --coverage --watchAll=false --passWithNoTests --silent --maxWorkers=50% --ci",
    "test:coverage:upload": "npm run test:coverage:ci && echo 'Coverage reports ready for upload'",
    "test:coverage:badge": "npm run test:coverage && node scripts/coverage-badge.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "npx tsx prisma/seed.ts",
    "wrangler:login": "wrangler login",
    "cf:d1:create": "wrangler d1 create snow-school-scheduler",
    "cf:d1:migrations:apply:local": "wrangler d1 migrations apply snow-school-scheduler --local"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.10",
    "@prisma/client": "^6.2.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@tanstack/react-query": "^5.85.3",
    "@tanstack/react-query-devtools": "^5.85.3",
    "@types/japanese-holidays": "^1.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "is-ip": "^5.0.1",
    "japanese-holidays": "^1.0.10",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.535.0",
    "next": "^15.1.6",
    "next-themes": "^0.4.6",
    "prisma": "^6.2.0",
    "react": "^18.3.1",
    "react-day-picker": "^9.8.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^6.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^1.1.2",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@opennextjs/cloudflare": "^1.8.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.7.2",
    "wrangler": "^4.25.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
